<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitys.FormActivity"
        android:orientation="vertical"
>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/mainToolbar"
            android:background="@color/laranja"
            android:layout_width="match_parent"
            android:layout_height="76dp">

        <LinearLayout
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <ImageView
                    android:layout_gravity="center|start"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/the_rock"
            />

            <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="The Rock"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="Brooklin, São Paulo"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                    android:layout_weight="0"
                    android:layout_gravity="center|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_notifications_none_24"
            />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@color/laranja"
        />

        <TextView
                android:text="Cadauaustrar pet"
                android:textSize="26sp"
                android:textColor="#33303E"
                android:fontFamily="@font/raleway_bold"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:text="Informe os dados do pet para que outras pessoas\npossam visualizar"
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_medium"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editNome"
            android:hint="Nome do pet"
            android:inputType="textPersonName"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="@color/laranja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editRaca"
            android:hint="Raça do pet"
            android:inputType="textPersonName"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="@color/laranja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editLocalizacao"
            android:hint="Localização do pet"
            android:inputType="textPersonName"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="@color/laranja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editIdade"
            android:hint="Idade do pet"
            android:inputType="number"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="@color/laranja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/radioMes">

            <RadioButton
                android:text="Meses"
                android:id="@+id/radioMes"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:text="Anos"
                android:id="@+id/radioAnos"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </RadioGroup>

        <Button
            android:id="@+id/btnCadastrar"
            android:text="Cadauaustrar"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />

        <Button
            android:id="@+id/btnAlterar"
            android:text="Auuuterar"
            android:visibility="invisible"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />

        <Button
            android:id="@+id/btnRemover"
            android:text="Remover"
            android:visibility="invisible"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />

    </LinearLayout>

</LinearLayout>